<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="de.symeda.sormas.app.component.controls.ControlButtonType"/>

        <variable name="data" type="de.symeda.sormas.app.backend.vaccination.VaccinationVisit" />
    </data>

    <LinearLayout
        android:id="@+id/row_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_activity_row_no_unread_status"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin">

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/vaccinationVisit_houseNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.21875"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:slim="true"
            app:value="@={data.houseNumber}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/vaccinationVisit_numberOfChildrenResident"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.21875"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.numberOfChildrenResident}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/vaccinationVisit_numberOfChildrenGuest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.21875"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.numberOfChildrenGuest}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlTextEditField
            android:id="@+id/vaccinationVisit_numberOfChildrenVaccinated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.21875"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            app:inputType="number"
            app:slim="true"
            app:value="@={data.numberOfChildrenVaccinated}"
            app:showCaption="false" />

        <de.symeda.sormas.app.component.controls.ControlButton
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.125"
            android:paddingStart="2dp"
            android:layout_marginTop="12dp"
            android:text=""
            app:iconStart="@drawable/ic_delete_forever_black_24dp"
            app:buttonType="@{ControlButtonType.LINE_DANGER}"
            app:iconOnly="true"
            app:slim="true" />

    </LinearLayout>

</layout>

