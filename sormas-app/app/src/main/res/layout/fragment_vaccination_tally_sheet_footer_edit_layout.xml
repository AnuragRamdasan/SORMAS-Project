<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:descendantFocusability="beforeDescendants"
    android:id="@+id/base_layout">

    <data>
        <variable name="data" type="de.symeda.sormas.app.backend.vaccination.VaccinationTallySheet"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_content"
            style="@style/LayoutSingleContentSpaceBelowStyle">

            <de.symeda.sormas.app.component.controls.ControlTextEditField
                android:id="@+id/vaccinationTallySheet_lastHouseOwnerDetails"
                app:value="@={data.lastHouseOwnerDetails}"
                app:inputType="textMultiLine"
                app:singleLine="false"
                app:maxLines="3"
                app:textArea="true"
                style="@style/ControlSingleColumnStyle" />

            <de.symeda.sormas.app.component.controls.ControlTextEditField
                android:id="@+id/vaccinationTallySheet_numberOfVaccinatedChildren"
                app:value="@={data.numberOfVaccinatedChildren}"
                app:inputType="number"
                style="@style/ControlSingleColumnStyle" />

            <de.symeda.sormas.app.component.controls.ControlTextEditField
                android:id="@+id/vaccinationTallySheet_numberOfVaccinatedNomadChildren"
                app:value="@={data.numberOfVaccinatedNomadChildren}"
                app:inputType="number"
                style="@style/ControlSingleColumnStyle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heading_opv_vials_returned"
                style="@style/SubHeadingStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/vaccinationTallySheet_numberOfVialsReturnedFull"
                    app:value="@={data.numberOfVialsReturnedFull}"
                    app:inputType="number"
                    style="@style/ControlFirstOfTwoColumnsStyle" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/vaccinationTallySheet_numberOfVialsReturnedOpen"
                    app:value="@={data.numberOfVialsReturnedOpen}"
                    app:inputType="number"
                    style="@style/ControlSecondOfTwoColumnsStyle" />

                <de.symeda.sormas.app.component.controls.ControlTextEditField
                    android:id="@+id/vaccinationTallySheet_numberOfVialsReturnedEmpty"
                    app:value="@={data.numberOfVialsReturnedEmpty}"
                    app:inputType="number"
                    style="@style/ControlSecondOfTwoColumnsStyle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>

